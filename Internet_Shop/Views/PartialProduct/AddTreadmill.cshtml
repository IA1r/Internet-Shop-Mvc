@using Internet_Shop.ViewModels;
@using Layer.Const;
@model Internet_Shop.ViewModels.AddProductViewModel


@using (Html.BeginForm("AddProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <fieldset>
        <div class="editor-label">
            @Html.LabelFor(model => model.Product.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Product.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Product.ProductType)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Product.ProductType, new { @Value = @Model.ProductType })
        </div>

        <div>
            @Html.Label(CharacteristicConst.Image)
        </div>
        <div class="editor-field">
            <input type="file" name="file" id="file" />
        </div>

        <div class="editor-label">
            @Html.Label(CharacteristicConst.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Product.Characteristics["5"])
        </div>

        <div class="editor-label">
            @Html.Label(CharacteristicConst.Features)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Product.Characteristics["21"])
        </div>

        <div class="editor-label">
            @Html.Label(CharacteristicConst.Type)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Product.Characteristics["43"])
        </div>

        <div class="editor-label">
            @Html.Label(CharacteristicConst.Construction)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Product.Characteristics["44"])
        </div>

        <div class="editor-label">
            @Html.Label(CharacteristicConst.EnginePower)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Product.Characteristics["45"])
        </div>

        <div class="editor-label">
            @Html.Label(CharacteristicConst.MaximumSpeed)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Product.Characteristics["46"])
        </div>

        <div class="editor-label">
            @Html.Label(CharacteristicConst.WeightUser)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Product.Characteristics["47"])
        </div>

        <div class="editor-label">
            @Html.Label(CharacteristicConst.Price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Product.Characteristics["12"])
        </div>

        <p>
            <input type="submit" value="Add Product" />
        </p>
    </fieldset>
}