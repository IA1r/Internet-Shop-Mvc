@using Internet_Shop.ViewModels;
@using Layer.Const;
@model  ProductsViewModel



<div style="width:100%">
    <div style="width:49%;float:left">
        <h2>@Model.Product.Name</h2>
    </div>
    <div style="width:49%; float:left;text-align:right">
        <h2>@Model.Product.Characteristics[CharacteristicConst.Price]</h2>
    </div>
</div>


<div>
    <div style="float:left; min-width:220px">
        <img src="@Model.Product.Characteristics[CharacteristicConst.Image]"  />
    </div>
    <div style="margin-left:35%;min-width:500px">
        <div style="font-size:20px">Product information: </div>

        @Html.Label("Material", new { @class = "information" }):
        @Model.Product.Characteristics[CharacteristicConst.Material] <br>

        @Html.Label("Name", new { @class = "information" }):
        @Model.Product.Name <br>

        @Html.Label("Width", new { @class = "information" }):
        @Model.Product.Characteristics[CharacteristicConst.Width] <br>

        @Html.Label("Height", new { @class = "information" }):
        @Model.Product.Characteristics[CharacteristicConst.Height] <br>

        @Html.Label("Depth", new { @class = "information" }):
        @Model.Product.Characteristics[CharacteristicConst.Depth] <br>

        @Html.Label("Color", new { @class = "information" }):
        @Model.Product.Characteristics[CharacteristicConst.Color] <br>

        @Html.Label("Description", new { @class = "information" }):
        @Model.Product.Characteristics[CharacteristicConst.Description] <br>
    </div>
</div>